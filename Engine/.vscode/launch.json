{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Game",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/bin/game", // Path to the executable
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": true, // Set to true to use an external console
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": false
          }
        ],
        "miDebuggerPath": "/usr/bin/gdb", // Path to GDB (adjust based on your system)
        "preLaunchTask": "build", // This tells VSCode to build before debugging
        "miDebuggerArgs": "",
        "logging": {
          "moduleLoad": false,
          "trace": true,
          "engineLogging": false
        },
        "sourceFileMap": {
          "/mnt/c": "C:\\"
        },
      }
    ]
  }
  